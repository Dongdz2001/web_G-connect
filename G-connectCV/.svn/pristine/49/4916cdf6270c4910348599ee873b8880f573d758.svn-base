.content-wrapper {
    background-color: #D3D2D2;
}
@media (min-width: 768px) {
    .bg-newlayout {
        background-color: #39444D;
        width: 250px;
    }

    li:has(a[aria-expanded="true"]) {
        min-width: 250px;

    }
    .sidebar-menu-text {
        margin-left: 10px;
    }
}

.bg-newlayout {
    background-color: #39444D;
}

.sidebar-menu-text {
    color: #8a9299;
}

.sidebar-menu-text:hover {
    color: #fff;
}


a[aria-expanded="true"] .sidebar-menu-text {
    color: #fff;
}

a[aria-expanded="true"] span {
    color: #fff;
}

li:has(a[aria-expanded="true"]) {

    background-color: #2F3940;
}

//custome sidebar
.border-nav-item{
    border-left: 1px solid rgba(46,49,51,.9);
    margin-left: 30px;
}
[class*="sidebar-dark-"] {
    background-color: #39444D;
}

[class*=sidebar-dark-] .nav-sidebar>.nav-item.menu-open>.nav-link, [class*=sidebar-dark-] .nav-sidebar>.nav-item:hover>.nav-link, [class*=sidebar-dark-] .nav-sidebar>.nav-item>.nav-link:focus {
    background-color: transparent;
    color: #fff;
}

a[aria-expanded="true"] .fa-angle-left {
    transform: rotate(-90deg);
}
.navbar-custom{
    position: 'fixed' !important;
     width: '100%';
     height: 50px;
}
.selected{
    background-color: #2196f3;
    border-radius: 100%; 
}