.login-page {
    align-items: initial;
    width: 100vw;
    overflow: hidden;
    background: white;
}

.illustration, .login-content {
    height: 100vh;
}
.login-content {
    /*box-shadow: 0 0 1px rgba(0,0,0,.125), -1px 0px 3px rgba(0,0,0,.2)*/
}
.illustration {
    background: url("../images/bg_header.png") no-repeat bottom center #0066B3;
}

    .illustration > .container {
        flex: 1;
        color: white;
        text-align: center;
    }

        .illustration > .container > .login-logo {
            width: 100px;
            height: 100px;
            background: url("../images/logo.png") no-repeat bottom center #0066B3;
            background-size: cover;
            margin:auto
        }

.login-content > div {
    flex: 1
}

.btn.social {
    width: 100%;
    padding: 12px;
    border: none;
    border-radius: 4px;
    margin: 5px 0;
    opacity: 0.95;
    display: inline-block;
    font-size: 17px;
    line-height: 20px;
    text-align: left;
    text-decoration: none; /* remove underline from anchors */
}

.btn:hover {
    opacity: 1;
}

/* add appropriate colors to fb, twitter and google buttons */
.facebook {
    background-color: #4267b2 !important;
    color: white;
}

.twitter {
    background-color: rgb(29, 161, 242) !important;
    color: white;
}

.google {
    background-color: #dd4b39 !important;
    color: white;
}

.social-icon {
    width: 40px;
    display: inline-block;
    text-align: center;
}

.validation-summary-errors ul {
    list-style-type: none;
    padding: 0px;
}

.validation-summary-error ul li {
}

.login-page .input-group .form-control {
    border-right: 0;
}

    .login-page .input-group .form-control:focus {
        box-shadow: none;
    }

        .login-page .input-group .form-control:focus ~ .input-group-append .input-group-text {
            border-color: #80bdff;
        }

.login-page .input-group .input-group-text {
    background-color: transparent;
    border-bottom-right-radius: .25rem;
    border-left: 0;
    border-top-right-radius: .25rem;
    color: #777;
    transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
}

input:-webkit-autofill,
input:-webkit-autofill:hover,
input:-webkit-autofill:focus,
input:-webkit-autofill:active {
    -webkit-box-shadow: 0 0 0 30px white inset !important;
}

.custom-control-label {
    cursor: pointer;
    font-size:.9rem;
    font-weight:600;
}

.img-logo {
    background: #0066b3;
    width: fit-content;
    height: fit-content;
}