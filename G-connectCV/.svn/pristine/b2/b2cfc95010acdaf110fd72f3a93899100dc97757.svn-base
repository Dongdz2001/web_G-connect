.tablesheet {
  border-collapse: collapse;
  margin-bottom: 1rem;
  width: 100%;
  background-color: transparent;
  color: #212529;
  font-size: 1rem;
  font-weight: 400;
  line-height: 1.5;
  text-align: left;
}

.tablesheet {
  background-color: #f5f5f5;
  border-bottom: 2px solid #dcdcdc;
}

.tdsheet h2 {
  display: flex;
  justify-content: center;
  align-items: center;
}
.thsheet,
.tdsheet {
  padding: 0.35rem;
  border-top: 1px solid #dcdcdc;
  max-width: max-content;
}

.thsheet {
  font-weight: 700;
  text-transform: uppercase;
}

.tdsheet,
.thsheet {
