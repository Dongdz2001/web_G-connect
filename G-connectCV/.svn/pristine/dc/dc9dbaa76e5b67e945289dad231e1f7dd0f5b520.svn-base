}
.p-card-title {
  font-style: italic;
}
.p-paginator .p-paginator-element, .p-paginator .p-paginator-pages .p-paginator-page {
  height: auto;
}
.p-paginator .p-paginator-element {
  padding: 5px;
}
.p-paginator-left-content .p-button {
