    flex: 1 !important;
  }
  .flex-2 {
    flex: 2 !important;
  }
  .flex-3 {
    flex: 3 !important;
  }
  .flex-4{
    flex: 4 !important;
  }
  .flex-5{
    flex: 5 !important;
  }
  .flex-6{
    flex: 6 !important;
  }

  .p-sidebar .p-sidebar-content {
    padding: 0;
  }


  .overflow-y-disable{
    overflow-y: hidden;
  }
  .overflow-y-auto{
    position: relative;
    overflow-y: auto !important; 
  }

  //custom font size
  .fsx-10px{
    font-size: 10px !important;
  }
  .fsx-11px{
    font-size: 11px !important;
  }
  .fsx-12px{
    font-size: 12px !important;
  }
  .fsx-13px{
    font-size: 13px !important;
  }

  //thêm option ẩn header sidebar
  .sidebar-header-none .p-sidebar-header{
    display: none;
  }
  .hide {
    display: none;
  }
  .tdCenter {  
    //display: block ruby !important;
    text-align: center !important;
  }
  .p-datatable .p-column-header-content {
    display: block;
  }

