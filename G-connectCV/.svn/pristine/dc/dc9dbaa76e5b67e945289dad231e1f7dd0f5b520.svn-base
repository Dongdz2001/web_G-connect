.field {
  margin-bottom: 5px;
}
.p-button {
  padding: 3px 14px;
  margin-right: 2px;
  display: inline-flex;
}
button.p-button {
  background-color: #08c !important;
  color: white !important;
}
button.p-disabled {
  background-color: gray !important;
  color: silver !important;
}
button.p-button-danger {
  background-color: yellow !important;
  color: red !important;
}
button.btnClose {
  background-color: white !important;
  color: gray !important;
  font-style: italic;
}
button.p-button-icon-only, button.p-paginator-element {
  padding: 2px 0;
}
.row-button a {
  display: inline-flex;
}
.p-datatable-tbody a i {
  height: 20px;
}
.p-inputtext {
  padding: 3px 5px;
}
.advancedSearchBox .p-button {
  padding: 3px 14px;
}
.p-inputgroup .p-button, .p-calendar .p-button {
  padding: 0px;
}
.field span, .field .p-component {
  width: 100%;
}
.row div {
  padding: 2px;
}
#myTab {  
  padding: 10px 0px;
}
#myTab li {  
  font-style: italic;
  list-style: none;
}
#myTab .numeric {  
  padding: 1px 5px;
  padding-left: 10px;
  background: #0088cc;
  color: #fff;
  border-radius: 5px;
  background-color: #08c;
}
#myTab .active .numeric {
  background: #444;
  padding: 6px 12px;
  font-size: 14px;
}
#myTab img {  
  margin: 0px 10px;
}
label.p-inputtext, .p-inputtext, .p-card-title {
