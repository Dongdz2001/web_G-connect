
.layout-navbar-fixed .wrapper .main-header{
    z-index: 1001;
}
.wrapper .content-wrapper {
    min-height: calc(100vh - calc(3.5rem + 1px));
}
.h-flex{
    min-height: calc(100vh - calc(5.5rem + 1px));
}
// fix lỗi mở calendar, chọn năm, sau đó bỏ chọn fix min-win của calendar
.p-datepicker{
    min-width: 273px !important;
}

label {
    display: inline-block;
    margin-bottom: 0;
}
.p-calendar-sm{
    height: 32px;
}

.form-float-label .field {
    margin-bottom: 1.5rem;
}
.p-inputwrapper-filled.p-multiselect.p-multiselect-chip .p-multiselect-label {
    padding: 0.25rem 0.25rem;
}
// fix lệch label
.p-float-label input:-webkit-autofill ~ label{
    top: -11px;
}
.p-disabled, .p-disabled * {
    cursor: not-allowed !important;
    pointer-events: visible;
    user-select: all;
}
.p-disabled, .p-component:disabled {
    opacity: 1;
}

//custome tree
.p-treetable .p-treetable-tbody > tr > td{
    padding: 0.2rem
}

.tree-background-hidden> .p-tree-container .p-treenode .p-treenode-content.p-highlight{
    background: none;
}
//
.main-header{
    z-index: 1000;
}
// fix change check box table - adminlte
.p-checkbox .p-checkbox-box .p-checkbox-icon {
    transition-duration: 0s;
}
// 
.block-component {
    cursor: not-allowed;
}
.pointer-events-none {
    pointer-events: none;
}
// custome style calendar
.p-datepicker table td{
    padding: 1px;
}
.p-datepicker .p-datepicker-header{
    padding: 0.1rem
}
.p-datepicker .p-datepicker-buttonbar {
    padding: 0.1rem 0;
}

.p-calendar .p-button{
    padding-left: 1px;
    background-color: transparent;
    color: #64748B;
    border-top:1px solid #b2c2d8 !important;
    border-right:1px solid #b2c2d8 !important;
    border-bottom:1px solid #b2c2d8 !important;
    border-left:none !important;
}
.p-calendar button:hover{
    background-color: transparent !important;
    color: #64748B !important;
    
}
// end custome style calendar
